<div class="container">
  <h1><%= @category.name %></h1>
  <div><%= @category.description %></div>
  <div class="links">
    <%= link_to "Categories", categories_path %> | 
    <%= link_to "Edit Category", edit_category_path(@category) %> | 
    <%= link_to "Delete Category", @category, method: :delete %>
  </div>
  <br>
  <p><%= link_to "New Post", new_category_post_path(@category), class: "btn btn-info" %></p>
  <ul class="posts-list">
    <% @category.posts.each do |post| %>
      <li><%= link_to post.name, category_post_path(@category, post) %></li>
    <% end %>
  </ul>
  <br>
  <div class="comments">
    <%= render @category.comments if @category.comments.present? %>
  </div>
  <p><%= link_to "Add comment", "#", class: "add-comment" %></p>
  <%= render "comments/form", object: @comment = @category.comments.build %>
</div>
